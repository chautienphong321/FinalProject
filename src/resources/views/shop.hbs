<main id="main">

  <!-- ======= Breadcrumbs Section ======= -->
  <section class="breadcrumbs">
    <div class="container">

      <div class="d-flex justify-content-between align-items-center">
        <ol>
          <li><a href="/">Home</a></li>
          <li>{{#if title}}{{title}}{{/if}}</li>
        </ol>
      </div>

    </div>
  </section><!-- End Breadcrumbs Section -->

  <section class="inner-page">
    <div class="container">
      <div class="section-title py-2">
        <h2>Check out <span>{{title}}</span></h2>
      </div>

      {{! Shop filter }}
      <section id="shop-filter" class="menu py-2">
        <div class="container">

          <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
              <ul id="shop-flters">
                <li data-filter="*" class="filter-active">Show All</li>
                {{#each types}}
                  <li
                    data-filter="shop-filter-{{name}}"
                    class="text-capitalize"
                  >{{name}}</li>
                {{/each}}
              </ul>

            </div>
            <div class="col-lg-12 d-flex justify-content-center">
              <div class="form-range">
                <input
                  type="range"
                  class="form-range"
                  min="0"
                  max="100"
                  step="1"
                  id="price-range"
                />
                <span class="range-value">$2,500</span>
              </div>
            </div>
          </div>

        </div>
      </section>
      {{! End Shop filter }}

      {{! Content }}
      <div class="container mt-4">
        <div
          class="d-flex flex-wrap justify-content-around shop-filter-container"
        >
          {{#each products}}
            <div class="w-25 shop-filter-item shop-filter-{{type.name}}">
              <div class="product-wrapper mb-45 text-center">
                <div class="product-img">
                  <a href="#" data-abc="true">
                    <img src="{{image}}" alt="" class="rounded-2" />
                  </a>
                  <span class="text-center shadow-lg"><i
                      class="fa fa-dollar-sign"
                    ></i>
                    <span
                      class="item-price"
                      value="{{price}}"
                    >{{formatCurrencyShop price}}</span></span>
                  <div class="product-action">
                    <div class="product-action-style">
                      <a href="#"> <i class="fa fa-info"></i> </a>
                      <a href="#"> <i class="fa fa-heart"></i> </a>
                      <a href="#"> <i class="fa fa-shopping-cart"></i> </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
      {{! End content }}

      <div class="d-flex justify-content-center mt-2"><button
          class="btn btn-outline-secondary"
          id="btn-load-more"
        >Load more</button></div>
    </div>
  </section>

</main><!-- End #main -->

