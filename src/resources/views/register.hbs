<main id="main vh-100">

    <section class="breadcrumbs py-4">
      <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h2 class="text-center mb-5 fs-2">{{title}}</h2>
                        <form action="/store" method="POST"> 
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                                <label for="floatingInput">Email address</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" autocomplete="">
                                <label for="floatingPassword">Password</label>
                            </div>
                            {{#if messages.error}}
                                <div class="alert alert-danger" role="alert">
                                {{messages.error}}
                                </div>
                            {{/if}}
                            <div class="d-grid mt-5">
                                <button class="btn btn-lg btn-primary btn-login text-uppercase fw-bold" type="submit">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-9 col-lg-6 col-xl-5 login-img">
                <img src="/assets/img/register-img.png"
                class="img-fluid" alt="Register image">
            </div>
        </div>
        </div>
      </div>
    </section>

  </main>